<%= form_for :topic, url: topics_path , html:{class:"form-horizontal"} do |f| %>
  <div class="form-group">
    <div class="col-sm-7">
      <%= f.text_field :title , class:"form-control col-sm-8", :placeholder => 'Title' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-3">
      <%= f.text_field :focus_area , class:"form-control", :placeholder => 'Focus Area'  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_area :description , class:"form-control", :placeholder => 'Description'  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class:"btn btn-warning" %>
    </div>
  </div>

<% end %>
