<%= bootstrap_devise_error_messages! %>
<div class="border-form-div">
  <h4 class="form_title"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h4>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
        <%= f.email_field :email, :placeholder => 'Email address', autofocus: true, class: "form-control" %>

        <p> ^^why the border? </p>

      <div class="form_buttons">
        <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-warning" %>
      </div>

    <% end %>

</div>
